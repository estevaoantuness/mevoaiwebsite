generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("users")
}

model Setting {
  key   String @id
  value String

  @@map("settings")
}

model Property {
  id            Int      @id @default(autoincrement())
  name          String
  icalAirbnb    String?  @map("ical_airbnb")
  icalBooking   String?  @map("ical_booking")
  employeeName  String   @map("employee_name")
  employeePhone String   @map("employee_phone")
  checkoutTime  String?  @map("checkout_time")
  createdAt     DateTime @default(now()) @map("created_at")

  messageLogs     MessageLog[]
  processedEvents ProcessedEvent[]

  @@map("properties")
}

model MessageLog {
  id            Int      @id @default(autoincrement())
  propertyId    Int?     @map("property_id")
  employeePhone String?  @map("employee_phone")
  message       String?
  sentAt        DateTime @default(now()) @map("sent_at")
  status        String   @default("sent")

  property Property? @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("message_logs")
}

model ProcessedEvent {
  id          Int      @id @default(autoincrement())
  propertyId  Int      @map("property_id")
  eventUid    String   @map("event_uid")
  eventDate   DateTime @map("event_date") @db.Date
  processedAt DateTime @default(now()) @map("processed_at")

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([propertyId, eventUid, eventDate])
  @@map("processed_events")
}
